<body>
    {{> index_header}}

    <main>
        <div class="simulation-body">
            <div class="input-output">
                <section class="input-section">
                    <form id="simulation-form">
                        <div class="form-group">
                            <label for="block-size">Block Size (words):</label>
                            <input type="number" id="block-size" value="2" min="1">
                        </div>
                        <div class="form-group">
                            <label for="mm-size">MM Size (blocks):</label>
                            <input type="number" id="mm-size" value="256" min="1">
                        </div>
                        <div class="form-group">
                            <label for="cache-size">Cache Size (blocks):</label>
                            <input type="number" id="cache-size" value="4" min="1">
                        </div>
                        <div class="form-group">
                            <label for="program-flow">Program Flow:</label>
                            <div class="input-with-button">
                                <input type="number" id="program-flow-input" min="0">
                                <button type="button" onclick="addProgramFlow()">Add</button>
                            </div>
                            <div id="program-flow-display"></div>
                        </div>
                        <div class="form-group">
                            <label for="cache-access-time">Cache Access Time (ns):</label>
                            <input type="number" id="cache-access-time" value="1" min="1">
                        </div>
                        <div class="form-group">
                            <label for="memory-access-time">Memory Access Time (ns):</label>
                            <input type="number" id="memory-access-time" value="10" min="1">
                        </div>
                        <button type="button" onclick="simulateCache()">Simulate</button>
                    </form>
                </section>

                <section class="result-display" id="result-display">
                    <h2>Simulation Results:</h2>
                    <pre id="results"></pre>
                    <button onclick="saveResults()">Save Results</button>
                </section>
            </div>
            <div class="simul">
                DITO LAGAY MEMORY BLOCK AND CACHE BLOCK
                                <div class="cache-block">
                    <table id="cache-table">
                        <thead>
                            <tr>
                                <th>Block</th>
                                <th>Age</th>
                                <th>Data</th>
                            </tr>
                        </thead>
                        <tbody id="cache-tbody">
                            <!-- Dynamic rows will be added here -->
                        </tbody>
                    </table>
                </div>
                                <div class="box left-box">
                    <h3>Memory Block</h3>
                    <table class="memory-table">
                        <thead>
                            <tr>
                                <th>Data</th>
                                <th>Hit</th>
                                <th>Miss</th>
                            </tr>
                        </thead>
                        <tbody id="memory-block">
                            <!-- Rows will be added here dynamically -->
                        </tbody>
                    </table>
                    <button type="button" onclick="nextStep()">Next</button>
                    <button type="button" onclick="resetSimulation()">Reset</button>
                </div>
            </div>
        </div>
    </main>


</body>
